---
const { name, certifications, image } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<li class="flex items-center gap-4">
  <ImageComp
    imagePath={image}
    imageAlt={name}
    styles="size-16 lg:size-20 rounded-full"
  />
  <div class="text-sm/6">
    <h3 class="font-medium">{name}</h3>
    <p class="text-gray-500">{certifications}</p>
  </div>
</li>
