---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

const { imagePath, title, date, blogUrl, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}",
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`,
  );
}

const dateData = new Date(date);
---

<div
  class="flex max-w-sm lg:max-w-none gap-10 flex-col lg:flex-row group border-t border-gray-200 pt-10"
>
  <div class="h-72 overflow-hidden shrink-0 relative">
    <Image
      src={images[imagePath]()}
      alt={title}
      class="w-full h-full object-cover duration-700 rounded-2xl"
      quality={80}
    />
  </div>

  <div class="flex flex-col bg-white lg:px-12 gap-3 justify-between h-full">
    <div class="flex flex-col gap-4">
      <p
        class="bg-main-blue/20 p-3 uppercase font-bold text-sm rounded-lg text-main-blue w-fit"
      >
        <FormattedDate date={dateData} />
      </p>
      <h3 class="text-2xl font-medium leading-tight text-dark-blue">
        {title}
      </h3>
      <p class="paragraph line-clamp-3 text-main-black/70">{description}</p>
      <a href={blogUrl} class="btn-secondary">Read More</a>
    </div>
  </div>
</div>
