---
import { FaPhone } from "react-icons/fa";
import { IoLocationSharp } from "react-icons/io5";
import { MdEmail } from "react-icons/md";
import {
  EMAIL_ADDRESS,
  PHONE_NUMBER,
  ADDRESS_LINE_1,
  ADDRESS_LINE_2,
  FACEBOOK_URL,
  INSTAGRAM_URL,
  TIKTOK_URL,
  YOUTUBE_URL,
  SITE_TITLE,
} from "../consts";
import { Image } from "astro:assets";
import idealLogo from "../assets/images/ideal-aviation-image-logo.webp";
import textLogo from "../assets/images/ideal-aviation-text-logo.webp";

import { navbarLinks } from "../data/navbarLinks";

import programs from "../data/programs";

const today = new Date();
---

<footer class="bg-gradient-to-br from-main-gray to-main-blue p-2">
  <div class="bg-white/50 rounded-3xl py-16 px-5">
    <div
      class="flex justify-center flex-col gap-5 max-w-xl lg:max-w-7xl mx-auto text-center mb-28"
    >
      <h2
        class="text-xs/5 font-semibold text-gray-500 uppercase tracking-widest"
      >
        Get started
      </h2>
      <h3
        class="max-w-xl text-pretty text-4xl font-semibold tracking-tight text-main-black sm:text-5xl mx-auto"
      >
        Ready to dive in? <br />
        Start your journey today.
      </h3>
      <p class="text-main-black/70">
        Fly the Ideal Way. Ideal Aviation is the place for pilots in St. Louis,
        Missouri.
      </p>
      <a href="/contact" class="btn-secondary mx-auto">Get Started</a>
    </div>

    <div class="text-main-black max-w-xl lg:max-w-7xl mx-auto">
      <div class="flex gap-10 flex-col lg:flex-row justify-between">
        <div class="flex flex-col gap-5 lg:w-1/3">
          <a
            href="/"
            class="text-4xl font-bold uppercase flex items-center gap-2"
          >
            <Image src={idealLogo} alt="Ideal Aviation Logo" class="w-20" />
            <Image src={textLogo} alt="Ideal Aviation Logo" class="w-20" />
          </a>

          <div class="flex space-x-6">
            <a
              href={FACEBOOK_URL}
              target="_blank"
              class="hover:text-main-black text-main-blue duration-200"
            >
              <span class="sr-only">Facebook</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
            <a
              href={INSTAGRAM_URL}
              target="_blank"
              class="hover:text-main-black text-main-blue duration-200"
            >
              <span class="sr-only">Instagram</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  fill-rule="evenodd"
                  d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
                  clip-rule="evenodd"></path>
              </svg>
            </a>
            <a
              href={TIKTOK_URL}
              target="_blank"
              class="hover:text-main-black text-main-blue duration-200"
            >
              <span class="sr-only">TikTok</span>

              <svg class="size-6" viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="M16.6 5.82s.51.5 0 0A4.28 4.28 0 0 1 15.54 3h-3.09v12.4a2.59 2.59 0 0 1-2.59 2.5c-1.42 0-2.6-1.16-2.6-2.6c0-1.72 1.66-3.01 3.37-2.48V9.66c-3.45-.46-6.47 2.22-6.47 5.64c0 3.33 2.76 5.7 5.69 5.7c3.14 0 5.69-2.55 5.69-5.7V9.01a7.35 7.35 0 0 0 4.3 1.38V7.3s-1.88.09-3.24-1.48"
                ></path></svg
              >
            </a>
            <a
              href={YOUTUBE_URL}
              target="_blank"
              class="hover:text-main-black text-main-blue duration-200"
            >
              <span class="sr-only">YouTube</span>
              <svg class="size-6" viewBox="0 0 24 24"
                ><path
                  fill="currentColor"
                  d="m10 15l5.19-3L10 9zm11.56-7.83c.13.47.22 1.1.28 1.9c.07.8.1 1.49.1 2.09L22 12c0 2.19-.16 3.8-.44 4.83c-.25.9-.83 1.48-1.73 1.73c-.47.13-1.33.22-2.65.28c-1.3.07-2.49.1-3.59.1L12 19c-4.19 0-6.8-.16-7.83-.44c-.9-.25-1.48-.83-1.73-1.73c-.13-.47-.22-1.1-.28-1.9c-.07-.8-.1-1.49-.1-2.09L2 12c0-2.19.16-3.8.44-4.83c.25-.9.83-1.48 1.73-1.73c.47-.13 1.33-.22 2.65-.28c1.3-.07 2.49-.1 3.59-.1L12 5c4.19 0 6.8.16 7.83.44c.9.25 1.48.83 1.73 1.73"
                ></path></svg
              >
            </a>
          </div>
        </div>

        <div class="grid lg:grid-cols-3 lg:mr-20 gap-10">
          <div class="flex flex-col gap-3 text-sm">
            <h3 class="font-semibold text-gray-500 pb-4">Training</h3>
            <ul class="flex flex-col gap-4 text-main-black">
              {
                programs.map((program) => (
                  <li>
                    <a
                      href={program.data.url}
                      class="hover:text-main-blue duration-200"
                    >
                      {program.data.title}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="flex flex-col gap-3 text-sm">
            <h3 class="font-semibold text-gray-500 pb-4">About Us</h3>
            <ul class="flex flex-col gap-4 text-main-black">
              {
                navbarLinks[3].submenu.map((link) => (
                  <li>
                    <a
                      href={link.link}
                      class="hover:text-main-blue duration-200"
                    >
                      {link.name}
                    </a>
                  </li>
                ))
              }
              <li>
                <a
                  href={navbarLinks[4].link}
                  class="hover:text-main-blue duration-200"
                >
                  {navbarLinks[4].name}
                </a>
              </li>
            </ul>
          </div>
          <div class="flex flex-col gap-3 text-sm">
            <h3 class="font-semibold text-gray-500 pb-4">Contact</h3>
            <ul class="flex flex-col gap-4 text-main-black">
              <li class="flex gap-2 group items-center">
                <MdEmail
                  className="size-4 group-hover:text-main-blue duration-200"
                />
                <a
                  class="group-hover:text-main-blue duration-200"
                  href=`mailto:${EMAIL_ADDRESS}`>{EMAIL_ADDRESS}</a
                >
              </li>
              <li class="flex gap-2 group items-center">
                <FaPhone
                  className="size-4 group-hover:text-main-blue duration-200"
                />
                <a
                  class="group-hover:text-main-blue duration-200"
                  href=`tel:${PHONE_NUMBER}`>{PHONE_NUMBER}</a
                >
              </li>
              <li class="flex gap-2 group max-w-sm">
                <IoLocationSharp
                  className="size-4 group-hover:text-main-blue duration-200 mt-1 flex-shrink-0"
                />
                <a
                  class="group-hover:text-main-blue duration-200"
                  href="https://maps.app.goo.gl/EkxRux52SAxEkUJLA"
                  target="_blank"
                >
                  <p>{ADDRESS_LINE_1}</p>
                  <p>{ADDRESS_LINE_2}</p>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div
        class="flex flex-col sm:flex-row justify-between border-t border-main-black/50 py-5 mt-10 gap-2"
      >
        <p class="text-xs">
          <span class="font-semibold">{SITE_TITLE}</span> &copy; {
            today.getFullYear()
          }. All rights reserved.
          <a
            class="hover:underline duration-200 hover:text-main-blue"
            href="/privacy-policy">Privacy Policy</a
          >
        </p>
        <p class="text-xs text-main-black">
          Powered by <a
            href="https://rightruddermarketing.com/"
            target="_blank"
            class="font-semibold hover:text-main-black text-main-blue duration-200"
            >More Right Rudder</a
          >
        </p>
      </div>
    </div>
  </div>
</footer>
