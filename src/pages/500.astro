---
import BaseLayout from "../layouts/BaseLayout.astro";

const data = {
  siteTitle: "Server Error (500) | Ideal Aviation",
  siteDescription:
    "We're experiencing a temporary server error. Please try again later or contact Ideal Aviation for assistance with your flight training needs.",
  keywords:
    "server error, Ideal Aviation, flight school support, technical difficulties",
};
---

<BaseLayout
  siteTitle={data.siteTitle}
  siteDescription={data.siteDescription}
  keywords={data.keywords}
>
  <section class="flex justify-center px-5 py-32 pt-60 relative">
    <div
      class="absolute top-0 w-full h-[20vh] bg-gradient-to-bl from-0% via-30% from-main-blue via-transparent"
    >
    </div>
    <div class="text-center flex flex-col gap-8">
      <svg class="size-20 text-main-blue mx-auto" viewBox="0 0 32 32"
        ><path
          fill="currentColor"
          d="M16 2C8.2 2 2 8.2 2 16s6.2 14 14 14s14-6.2 14-14S23.8 2 16 2m5.4 21L16 17.6L10.6 23L9 21.4l5.4-5.4L9 10.6L10.6 9l5.4 5.4L21.4 9l1.6 1.6l-5.4 5.4l5.4 5.4z"
        ></path></svg
      >

      <h1 class="font-bold text-4xl">We're sorry, but something went wrong.</h1>

      <p class="text-gray-600 max-w-md mx-auto">
        We're experiencing a temporary server error. Our team has been notified
        and is working to resolve this quickly.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary"> Back to Home </a>
        <a href="/contact" class="btn-secondary"> Contact Support </a>
      </div>
    </div>
  </section>
</BaseLayout>
