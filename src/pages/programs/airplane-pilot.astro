---
import BaseLayout from "~/layouts/BaseLayout.astro";
import ImageComp from "~/components/ImageComp.astro";
import FAQs from "../../components/FAQs.astro";

const data = {
  siteTitle: "Our Story | Ideal Aviation",
  siteDescription:
    "Ideal Aviation's story is one of passion, dedication, and a love for aviation. Learn more about our founder, Bill Macon, and the legacy of flight that inspires us every day.",
};
---

<BaseLayout siteTitle={data.siteTitle} siteDescription={data.siteDescription}>
  <section class="pt-28 relative">
    <div
      class="absolute top-0 w-full h-[20vh] bg-gradient-to-bl from-0% via-30% from-main-blue via-transparent"
    >
    </div>

    <div class="max-w-xl lg:max-w-7xl mx-auto px-5 py-24 flex flex-col">
      <div class="flex flex-col lg:flex-row gap-10">
        <div class="flex-1">
          <h2
            class="font-mono text-xs/5 font-semibold uppercase tracking-widest text-gray-500 data-[dark]:text-gray-400"
          >
            Airplane Pilot Training
          </h2>
          <h3
            class="mt-2 text-pretty text-4xl font-medium tracking-tighter text-gray-950 data-[dark]:text-white sm:text-6xl"
          >
            Part 141 and part 61 airplane pilot training courses
          </h3>
          <p class="mt-6 max-w-3xl text-2xl font-medium text-gray-500"></p>
          <p class="text-gray-600 block">
            Ideal Aviation is the place to become a pilot in St. Louis, MO.
            Whether you're starting on your private or training for advanced
            ratings, we can help you get your private pilot certificate and
            more.
          </p>

          <div class="mt-6">
            <a class="btn-primary" href="/contact">Fly Now</a>
          </div>
        </div>
        <div class="flex-1">
          <div
            class="overflow-hidden rounded-2xl shadow-xl outline-1 -outline-offset-1 outline-black/10"
          >
            <ImageComp
              imageAlt="Bill Macon"
              imagePath="/src/assets/images/multi.webp"
              styles="block object-cover"
            />
          </div>
        </div>
      </div>
    </div>

    <section
      class="mx-auto my-12 max-w-2xl lg:max-w-7xl px-6 sm:mt-20 sm:mb-48 lg:px-8"
    >
      <h2
        class="font-mono text-xs/5 font-semibold uppercase tracking-widest text-gray-500 data-[dark]:text-gray-400"
      >
        A legacy of flight
      </h2>
      <hr class="mt-6 border-t border-gray-200" />
      <ul
        role="list"
        class="mx-auto mt-10 grid grid-cols-1 gap-8 lg:grid-cols-2"
      >
        <li>
          <ImageComp
            imageAlt="Beverly Von Hoffmann"
            imagePath="/src/assets/images/beverly-vonhoffmann.webp"
            styles="w-11/12 max-w-lg h-[30rem] object-cover rounded-xl"
          />
          <p class="mt-6 max-w-lg text-sm/6 text-gray-500">
            "My mother, Beverly von Hoffmann, obtained her pilot license in
            1943, just past her 18th birthday. She reveled flying her Stinson
            during her days at Stevens College in Columbia, Missouri, often
            taking friends on weekend outings to St. Louis and beyond."
          </p>
        </li>
        <li>
          <ImageComp
            imageAlt="Bill Macon Sr."
            imagePath="/src/assets/images/bill_macon_sr.webp"
            styles="w-11/12 max-w-lg h-[30rem] object-cover rounded-xl"
          />
          <p class="mt-6 max-w-lg text-sm/6 text-gray-500">
            "My father, Bill Macon Sr., was a pilot in the U.S. Army Air Corps
            during World War II. “Big Bill” is pictured here after completing
            his flight training at Cimmaron Army Airfield in Oklahoma in 1943.
            Macon, Sr. went on to teach radio communications at Scott Field
            during war, just down the road from where Ideal Aviation is now."
          </p>
        </li>
      </ul>
    </section>

    <section class="mx-2 rounded-3xl bg-main-blue py-10 lg:pt-36 lg:pb-28 px-5">
      <div class="max-w-7xl mx-auto rounded-3xl overflow-hidden lg:-mt-60">
        <iframe
          class="w-full aspect-video"
          src="https://tube.rvere.com/embed?v=IOY7YqMDeCU"
          title="Interview with Managing Partner, Bill!"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        >
        </iframe>
      </div>
    </section>

    <FAQs />
  </section>
</BaseLayout>
